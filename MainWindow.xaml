<Window x:Class="_312840HighScoreTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_312840HighScoreTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="txtName" />
        <TextBox x:Name="txtScore" />
        <Button x:Name="btnSave" Click="btnSave_Click" Content="Save" />
        <Button x:Name="btnDisplay" Click="btnDisplay_Click" Content="Display high scores" />
        <Label x:Name="lblOutput" />
    </StackPanel>
</Window>
